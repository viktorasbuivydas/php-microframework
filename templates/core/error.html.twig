{% extends "base.html.twig" %}

{% block title %}Framework Error{% endblock %}

{% block body %}
    <h1>Server Error</h1>
    <p>An error occurred while processing the request.</p>
    {% if displayErrors %}
        <p class="text-red-500"><strong>{{ message }}</strong></p>
        <table class="bg-red-100 error">
            <thead class="border-b border-red-300">
            <tr>
                <th>Key</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-red-300">
            <tr>
                <th>Message</th>
                <td><pre><code>{{ message }}</code></pre></td>
            </tr>
            <tr>
                <th>File Name</th>
                <td><pre><code>{{ fileName }}</code></pre></td>
            </tr>
            <tr>
                <th>Line Number</th>
                <td><pre><code>{{ lineNumber }}</code></pre></td>
            </tr>
            <tr>
                <th>Error Type</th>
                <td><pre><code>{{ errorType }}</code></pre></td>
            </tr>
            <tr>
                <th>Backtrace</th>
                <td><pre><code>{{ backtrace }}</code></pre></td>
            </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock %}

